#!/usr/bin/env python
# -*- coding: utf-8 -*-

from command.build_dockerfile_command import BuildDockerfileCommand
from command.docker_image_build_command import DockerImageBuildCommand
from command.docker_image_push_command import DockerImagePushCommand
from command.graph_command import GraphCommand
from command.provision_command import ProvisionCommand

import os
import re
from cleo import Application

configuration = {
    'basePath': os.path.abspath(os.path.join(os.path.dirname(os.path.dirname(__file__)), 'docker')),

    'dockerBuild': {},
    'dockerPush': {},

    'docker': {
        'imagePrefix': 'webdevops',
        'autoLatestTag': 'ubuntu-16.04',
        'pathRegex': re.compile('/(?P<image>[^/]+)/(?P<tag>[^/]+)/Dockerfile$'),
    },
}

application = Application()
application.add(BuildDockerfileCommand(configuration=configuration))
application.add(DockerImageBuildCommand(configuration=configuration))
application.add(DockerImagePushCommand(configuration=configuration))
application.add(GraphCommand(configuration=configuration))
application.add(ProvisionCommand(configuration=configuration))

if __name__ == '__main__':
    application.run()
